#include <stdio.h>
#include <math.h>
float areaofcir(float r);
int main()
{
    float area,r;
    printf("Enter the radius of the circle:\n");
    scanf("%f",&r);
    area=areaofcir(r);
    printf("Area of the given circle:%f\n",area);
    return 0;
}
float areaofcir(float r)
{
    float area;
    area=3.14*pow(r,2);
    return area;
}
