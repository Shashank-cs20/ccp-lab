#include <stdio.h>
int main()
{
    char str1[100], str2[50], str3[50];
    int i=0, j=0;
    printf("\n Enter the  string one: ");
    gets(str1);
    printf("\n Enter the string two: ");
    gets(str2);
    while(str1[i] != '\0')
    {   str3[i] = str1[j];
        i++;
        j++;
    }
    j=0;
    while(str2[j] != '\0')
    {
        str3[i] = str2[j];
        i++;
        j++;
    }
    str3[i] = '\0';
    printf("\n After concatination, the string is : ");
    puts(str3);
    printf("\n Length of the concatenated string = %d",i);
    return 0;
}
